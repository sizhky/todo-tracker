Screen {
    align: center middle;
}

#main {
    width: 95%;
    height: 90%;
    border: solid green;
    padding: 1;
}

DataTable {
    height: 100%;
    border: solid green;
    padding: 0 1;
}

DataTable > .datatable--header {
    background: $primary-background;
    color: $text;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $boost;
    color: $text;
}